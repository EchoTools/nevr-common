              "$ref": "#/definitions/v1Match"
            }
          },
          "default": {
            "description": "An unexpected error response.",
            "schema": {
              "$ref": "#/definitions/rpcStatus"
            }
          }
        },
        "parameters": [
          {
            "name": "body",
            "description": "Request to create a lobby session.",
            "in": "body",
            "required": true,
            "schema": {
              "$ref": "#/definitions/v1LobbySessionCreateRequest"
            }
          }
        ],
        "tags": [
          "NevrService"
        ]
      }
    }
